{
  "stanzas": [
    {
      "lines": [
        {
          "number": 1,
          "text": "Must Jesus bear the cross alone,"
        },
        {
          "number": 2,
          "text": "and all the world go free?"
        },
        {
          "number": 3,
          "text": "No, there’s a cross for everyone,"
        },
        {
          "number": 4,
          "text": "and there’s a cross for me."
        }
      ],
      "number": 1
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "The consecrated cross I’ll bear"
        },
        {
          "number": 2,
          "text": "till He shall set me free;"
        },
        {
          "number": 3,
          "text": "and then go home my crown to wear,"
        },
        {
          "number": 4,
          "text": "for there’s a crown for me."
        }
      ],
      "number": 2
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "Upon the crystal pavement, down"
        },
        {
          "number": 2,
          "text": "at Jesus’ pierced feet,"
        },
        {
          "number": 3,
          "text": "with joy I’ll cast my golden crown,"
        },
        {
          "number": 4,
          "text": "and His dear name repeat."
        }
      ],
      "number": 3
    }
  ],
  "title": "Must Jesus Bear the Cross Alone"
}
