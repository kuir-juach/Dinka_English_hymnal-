{
  "stanzas": [
    {
      "lines": [
        {
          "number": 1,
          "text": "O for a heart to praise my God,"
        },
        {
          "number": 2,
          "text": "A heart from sin set free,"
        },
        {
          "number": 3,
          "text": "A heart that always feels Thy blood"
        },
        {
          "number": 4,
          "text": "So freely shed for me."
        }
      ],
      "number": 1
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "A heart resigned, submissive, meek,"
        },
        {
          "number": 2,
          "text": "My dear Redeemerâ€™s throne,"
        },
        {
          "number": 3,
          "text": "Where only Christ is heard to speak,"
        },
        {
          "number": 4,
          "text": "Where Jesus reigns alone."
        }
      ],
      "number": 2
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "A heart in every thought renewed"
        },
        {
          "number": 2,
          "text": "And full of love divine,"
        },
        {
          "number": 3,
          "text": "Perfect and right and pure and good,"
        },
        {
          "number": 4,
          "text": "A copy, Lord, of Thine."
        }
      ],
      "number": 3
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "Thy nature, gracious Lord, impart;"
        },
        {
          "number": 2,
          "text": "Come quickly from above;"
        },
        {
          "number": 3,
          "text": "Write Thy new name upon my heart,"
        },
        {
          "number": 4,
          "text": "Thy new, best name of Love."
        }
      ],
      "number": 4
    }
  ],
  "title": "O for a Heart to Praise My God!"
}
