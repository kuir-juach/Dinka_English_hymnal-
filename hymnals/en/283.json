{
  "stanzas": [
    {
      "lines": [
        {
          "number": 1,
          "text": "O Jesus, thou art standing,"
        },
        {
          "number": 2,
          "text": "outside the fast closed door,"
        },
        {
          "number": 3,
          "text": "in lowly patience waiting"
        },
        {
          "number": 4,
          "text": "to pass the threshold o’er:"
        },
        {
          "number": 5,
          "text": "O shame, professing Christians,"
        },
        {
          "number": 6,
          "text": "his Name and sign who bear,"
        },
        {
          "number": 7,
          "text": "O shame, thrice shame upon us,"
        },
        {
          "number": 8,
          "text": "to keep him standing there!"
        }
      ],
      "number": 1
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "O Jesus, thou art knocking;"
        },
        {
          "number": 2,
          "text": "and lo, that hand is scarred,"
        },
        {
          "number": 3,
          "text": "and thorns thy brow encircle,"
        },
        {
          "number": 4,
          "text": "and tears thy face have marred:"
        },
        {
          "number": 5,
          "text": "O love that passeth knowledge,"
        },
        {
          "number": 6,
          "text": "so patiently to wait!"
        },
        {
          "number": 7,
          "text": "O sin that hath no equal,"
        },
        {
          "number": 8,
          "text": "so fast to bar the gate!"
        }
      ],
      "number": 2
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "O Jesus, thou art pleading"
        },
        {
          "number": 2,
          "text": "in accents meek and low,"
        },
        {
          "number": 3,
          "text": "“I died for you, my children,"
        },
        {
          "number": 4,
          "text": "and will you treat me so?”"
        },
        {
          "number": 5,
          "text": "O Lord, with shame and sorrow"
        },
        {
          "number": 6,
          "text": "we open now the door;"
        },
        {
          "number": 7,
          "text": "dear Savior, enter, enter,"
        },
        {
          "number": 8,
          "text": "and leave us never more."
        }
      ],
      "number": 3
    }
  ],
  "title": "O Jesus, Thou Art Standing"
}
