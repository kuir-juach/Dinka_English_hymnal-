{
  "stanzas": [
    {
      "lines": [
        {
          "number": 1,
          "text": "O day of rest and gladness,"
        },
        {
          "number": 2,
          "text": "O day of joy and light,"
        },
        {
          "number": 3,
          "text": "O balm of care and sadness,"
        },
        {
          "number": 4,
          "text": "most beautiful, most bright;"
        },
        {
          "number": 5,
          "text": "on thee, the high and lowly,"
        },
        {
          "number": 6,
          "text": "who bend before throne,"
        },
        {
          "number": 7,
          "text": "sing, “Holy, holy, holy,”"
        },
        {
          "number": 8,
          "text": "to the Eternal One."
        }
      ],
      "number": 1
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "Thou art a port protected"
        },
        {
          "number": 2,
          "text": "from storms that round us rise;"
        },
        {
          "number": 3,
          "text": "a garden intersected"
        },
        {
          "number": 4,
          "text": "with streams of paradise;"
        },
        {
          "number": 5,
          "text": "thou art a cooling fountain"
        },
        {
          "number": 6,
          "text": "in life’s dry, dreary sand;"
        },
        {
          "number": 7,
          "text": "from thee, like Pisgah’s mountain,"
        },
        {
          "number": 8,
          "text": "we view our promised land."
        }
      ],
      "number": 2
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "A day of sweet reflection,"
        },
        {
          "number": 2,
          "text": "thou art a day of love,"
        },
        {
          "number": 3,
          "text": "A day to raise affection"
        },
        {
          "number": 4,
          "text": "from earth to things above."
        },
        {
          "number": 5,
          "text": "New graces ever gaining"
        },
        {
          "number": 6,
          "text": "from this our day of rest,"
        },
        {
          "number": 7,
          "text": "We reach the rest remaining"
        },
        {
          "number": 8,
          "text": "in mansions of the blessed."
        }
      ],
      "number": 3
    }
  ],
  "title": "O Day of Rest and Gladness"
}
