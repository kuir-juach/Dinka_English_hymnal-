{
  "stanzas": [
    {
      "lines": [
        {
          "number": 1,
          "text": "O gladsome light,"
        },
        {
          "number": 2,
          "text": "Of God the Father’s face,"
        },
        {
          "number": 3,
          "text": "The eternal splendour wearing;"
        },
        {
          "number": 4,
          "text": "Celestial, holy, blest,"
        },
        {
          "number": 5,
          "text": "Our Saviour, Jesus Christ,"
        },
        {
          "number": 6,
          "text": "Joyful in Thine appearing."
        }
      ],
      "number": 1
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "Now e’er day fadeth quite,"
        },
        {
          "number": 2,
          "text": "We see the evening light,"
        },
        {
          "number": 3,
          "text": "Our wonted hymn outpouring;"
        },
        {
          "number": 4,
          "text": "Father of might unknown,"
        },
        {
          "number": 5,
          "text": "Thee His incarnate Son,"
        },
        {
          "number": 6,
          "text": "And Holy Spirit adoring."
        }
      ],
      "number": 2
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "To Thee of right belongs"
        },
        {
          "number": 2,
          "text": "All praise of holy songs,"
        },
        {
          "number": 3,
          "text": "O Son of God, life giver;"
        },
        {
          "number": 4,
          "text": "Thee, therefore, O most high,"
        },
        {
          "number": 5,
          "text": "The world doth glorify"
        },
        {
          "number": 6,
          "text": "And shall exalt forever."
        }
      ],
      "number": 3
    }
  ],
  "title": "O Gladsome Light"
}
