{
  "refrain": {
    "lines": [
      {
        "number": 1,
        "text": "Be like Jesus, this my song,"
      },
      {
        "number": 2,
        "text": "In the home and in the throng;"
      },
      {
        "number": 3,
        "text": "Be like Jesus, all day long!"
      },
      {
        "number": 4,
        "text": "I would be like Jesus."
      }
    ]
  },
  "stanzas": [
    {
      "lines": [
        {
          "number": 1,
          "text": "Earthly pleasures vainly call me;"
        },
        {
          "number": 2,
          "text": "I would be like Jesus;"
        },
        {
          "number": 3,
          "text": "Nothing worldly shall enthrall me;"
        },
        {
          "number": 4,
          "text": "I would be like Jesus."
        }
      ],
      "number": 1
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "He has broken every fetter,"
        },
        {
          "number": 2,
          "text": "I would be like Jesus;"
        },
        {
          "number": 3,
          "text": "That my soul may serve Him better,"
        },
        {
          "number": 4,
          "text": "I would be like Jesus."
        }
      ],
      "number": 2
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "All the way from earth to glory,"
        },
        {
          "number": 2,
          "text": "I would be like Jesus;"
        },
        {
          "number": 3,
          "text": "Telling o’er and o’er the story,"
        },
        {
          "number": 4,
          "text": "I would be like Jesus."
        }
      ],
      "number": 3
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "That in Heaven He may meet me,"
        },
        {
          "number": 2,
          "text": "I would be like Jesus;"
        },
        {
          "number": 3,
          "text": "That His words “Well done” may greet me,"
        },
        {
          "number": 4,
          "text": "I would be like Jesus."
        }
      ],
      "number": 4
    }
  ],
  "title": "I Would Be Like Jesus"
}
