      {
        "number": 4,
        "text": "That flowed on Calvary."
      }
    ]
  },
  "stanzas": [
    {
      "lines": [
        {
          "number": 1,
          "text": "I hear Thy welcome voice,"
        },
        {
          "number": 2,
          "text": "That calls me, Lord, to Thee;"
        },
        {
          "number": 3,
          "text": "For cleansing in Thy precious blood,"
        },
        {
          "number": 4,
          "text": "That flowed on Calvary."
        }
