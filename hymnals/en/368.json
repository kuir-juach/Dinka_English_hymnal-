{
  "refrain": {
    "lines": [
      {
        "number": 1,
        "text": "Blow the trumpet, trusty watchman,"
      },
      {
        "number": 2,
        "text": "Blow it loud o’er land and sea;"
      },
      {
        "number": 3,
        "text": "God commissions, sound the message!"
      },
      {
        "number": 4,
        "text": "Every captive may be free."
      }
    ]
  },
  "stanzas": [
    {
      "lines": [
        {
          "number": 1,
          "text": "Watchman, blow the gospel trumpet,"
        },
        {
          "number": 2,
          "text": "Every soul a warning give;"
        },
        {
          "number": 3,
          "text": "Whosoever hears the message"
        },
        {
          "number": 4,
          "text": "May repent, and, turn and live."
        }
      ],
      "number": 1
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "Sound it loud oér every hilltop,"
        },
        {
          "number": 2,
          "text": "Gloomy shade and sunny plain;"
        },
        {
          "number": 3,
          "text": "Ocean depths repeat the message,"
        },
        {
          "number": 4,
          "text": "Full salvation’s glad refrain."
        }
      ],
      "number": 2
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "Sound it in the hedge and highway,"
        },
        {
          "number": 2,
          "text": "Earth’s dark spots where exiles roam;"
        },
        {
          "number": 3,
          "text": "Let it tell all things are ready,"
        },
        {
          "number": 4,
          "text": "Father waits to welcome home."
        }
      ],
      "number": 3
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "Sound it for the heavy laden,"
        },
        {
          "number": 2,
          "text": "Weary, longing to be free;"
        },
        {
          "number": 3,
          "text": "Sound a Savior’s invitation,"
        },
        {
          "number": 4,
          "text": "Sweetly saying, “Come to me.”"
        }
      ],
      "number": 4
    }
  ],
  "title": "Watchman, Blow the Gospel Trumpet"
}
