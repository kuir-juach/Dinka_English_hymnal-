{
  "stanzas": [
    {
      "lines": [
        {
          "number": 1,
          "text": "Christ is the world’s light,"
        },
        {
          "number": 2,
          "text": "Christ and none other;"
        },
        {
          "number": 3,
          "text": "born in our darkness,"
        },
        {
          "number": 4,
          "text": "He became our brother-"
        },
        {
          "number": 5,
          "text": "if we have seen Him,"
        },
        {
          "number": 6,
          "text": "we have seen the Father:"
        },
        {
          "number": 7,
          "text": "Glory to God on high!"
        }
      ],
      "number": 1
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "Christ is the world’s peace,"
        },
        {
          "number": 2,
          "text": "Christ and none other;"
        },
        {
          "number": 3,
          "text": "no one can serve Him,"
        },
        {
          "number": 4,
          "text": "and despise another."
        },
        {
          "number": 5,
          "text": "Who else unites us,"
        },
        {
          "number": 6,
          "text": "one in God the Father?"
        },
        {
          "number": 7,
          "text": "Glory to God on high!"
        }
      ],
      "number": 2
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "Christ is the world’s life,"
        },
        {
          "number": 2,
          "text": "Christ and none other;"
        },
        {
          "number": 3,
          "text": "sold once for silver,"
        },
        {
          "number": 4,
          "text": "murdered here, our brother-"
        },
        {
          "number": 5,
          "text": "He, who redeems us,"
        },
        {
          "number": 6,
          "text": "reigns with God the Father:"
        },
        {
          "number": 7,
          "text": "Glory to God on high!"
        }
      ],
      "number": 3
    },
    {
      "lines": [
        {
          "number": 1,
          "text": "Give God the glory,"
        },
        {
          "number": 2,
          "text": "God and none other;"
        },
        {
          "number": 3,
          "text": "give God the glory,"
        },
        {
          "number": 4,
          "text": "Spirit, Son and Father;"
        },
        {
          "number": 5,
          "text": "give God the glory,"
        },
        {
          "number": 6,
          "text": "God-with-us our brother:"
        },
        {
          "number": 7,
          "text": "Glory to God on high!"
        }
      ],
      "number": 4
    }
  ],
  "title": "Christ Is the World's Light"
}
